# ==========================================
# Winchester Ascendancy - Environment Variables
# ==========================================
# Copy this file to .env and configure your values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
PORT=4000
API_BASE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MONGODB_URI=mongodb://winchester:password@localhost:27017/winchester?authSource=admin
MONGODB_TEST_URI=mongodb://winchester:password@localhost:27017/winchester_test?authSource=admin
REDIS_URL=redis://localhost:6379

# ==========================================
# DISCORD CONFIGURATION
# ==========================================
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_for_slash_commands

# ==========================================
# SECURITY SETTINGS
# ==========================================
JWT_SECRET=your_super_secure_jwt_secret_min_32_characters_long
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=12

# ==========================================
# CORS SETTINGS
# ==========================================
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==========================================
# CACHE SETTINGS
# ==========================================
CACHE_TTL=3600
ENABLE_CACHE=true

# ==========================================
# EXTERNAL APIs
# ==========================================
# Add any external API keys here if needed

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
DEBUG_MODE=true
ENABLE_SWAGGER=true

# ==========================================
# PRODUCTION OVERRIDES
# ==========================================
# These override development settings when NODE_ENV=production

# Production database (use Atlas or dedicated server)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/winchester?retryWrites=true&w=majority

# Production Discord redirect URIs
# DISCORD_REDIRECT_URI=https://your-domain.com/auth/discord/callback

# Production secrets (use strong, unique secrets)
# JWT_SECRET=production_jwt_secret_here
# SESSION_SECRET=production_session_secret_here

# Production CORS
# CORS_ORIGIN=https://your-domain.com

# Production logging
# LOG_LEVEL=warn
# LOG_FILE=/var/log/winchester/app.log